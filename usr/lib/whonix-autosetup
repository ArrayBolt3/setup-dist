#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

set -x

maximize_window() {
   ## The "p" is not there for some reason.
   title="whonix-autosetu"
   if [ ! -f /usr/lib/msgcollector/msgwmctrl ]; then
      return 0
   fi
   true "INFO: Waiting for window title \"$title\" to appear."
   source /usr/lib/msgcollector/msgwmctrl
   output_wait_for_window "$title"
   ## Deactivate eventual trap from msgwmctrl.
   trap "" ERR
   true "INFO: Maximizing window title \"$title\"."
   wmctrl -b add,maximized_vert,maximized_horz -r "$title"
   true "INFO: Maximized window title \"$title\"."
}

if [ -f "/usr/share/anon-ws-base-files/workstation" ]; then
   if [ -f "/root/.whonix.d/35_aptrepository_autogenerated" ]; then
      ## /root/.whonix.d/35_aptrepository_autogenerated exists.
      ## whonixsetup already finished earlier, exit.
      exit 0
   else
      ## /root/.whonix.d/35_aptrepository_autogenerated does not exist.
      ## whonixsetup not finished yet, continue.
      cat /etc/motd
      maximize_window
      sudo whonixsetup
      true "INFO: Feel free to close this window."
      sleep 86400
      exit 0
   fi
fi

source /usr/lib/whonixcheck/17_check_tor_enabled

## Check if Tor is enabled.
## sets: TOR_ENABLED
check_tor_enabled_do

if [ "$TOR_ENABLED" = "0" ]; then
   cat /etc/motd
   maximize_window
   sudo whonixsetup
   true "INFO: Feel free to close this window."
   sleep 86400
   exit 0
fi

exit 0
